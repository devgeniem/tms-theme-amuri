{>"shared/base" /}

{<content}
    <main class="main-content" id="main-content">
        {#Search}
            {?page_title}
                <div class="section pb-0">
                    <div class="container">
                        <div class="columns">
                            <div class="column is-10 is-offset-1 has-text-centered">
                                <h1 class="mb-0">
                                    {page_title|s}
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>
            {/page_title}

            {>"views/search/form" /}

            {?event_search}
                <section class="section search__event-search pt-4 pb-4 {template_classes.event_search_section|s}">
                    <div class="container">
                        <div class="columns">
                            <div class="column is-10 is-offset-1 pt-6 pb-6 has-text-centered h6">
                                {>"ui/link" link=event_search classes="has-text-paragraph" /}
                            </div>
                        </div>
                    </div>
                </section>
            {/event_search}

            <section class="section pt-4 pb-4">
                <div class="container">
                    <div class="columns">
                        <div class="column is-10 is-offset-1">
                            {>"views/search/results" /}
                        </div>
                    </div>
                </div>
            </section>
        {/Search}
    </main>
{/content}
