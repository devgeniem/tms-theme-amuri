<section {?anchor}id="{anchor|attr}"{/anchor}
         class="hero has-background-secondary-dark-invert is-relative">
    <div class="hero__background-container is-relative image has-width-100 {container_class|attr}">
        <div
            class="hero__background is-absolute has-top-0 has-bottom-0 has-right-0 has-left-0 has-background-cover" {@inlinebg id=image size="fullhd" /}></div>
    </div>

    {?video_file}
        <div class="hero__background-container is-overlay is-clipped" {^autoplay_video}aria-hidden="true" tabindex="-1"{/autoplay_video}>
            <video src="{video_file.url|url}" class="hero__video {^autoplay_video}is-hidden{/autoplay_video}"
                loop muted playsinline
                {?video_caption}aria-describedby="video-caption"{/video_caption}
                {?autoplay_video}autoplay{/autoplay_video}>
            </video>

            <button class="hero__control hero__control--play-large {?autoplay_video}is-hidden{/autoplay_video}" aria-label="{Strings.s.video.play|attr}">
                {>"ui/icon" icon="play" class="icon--xxxlarge"  /}
            </button>

            <div class="hero__video-controls columns p-2 {^autoplay_video}is-hidden{/autoplay_video}">
                <div class="column">
                    <button class="hero__control--play mr-1" aria-label="{Strings.s.video.play|html}">
                        {>"ui/icon" icon="play" class="icon--large is-primary-invert"  /}
                    </button>
                    <button class="hero__control--pause mr-1" aria-label="{Strings.s.video.pause|html}">
                        {>"ui/icon" icon="pause" class="icon--large is-primary-invert"  /}
                    </button>
                    <button class="hero__control--stop mr-1" aria-label="{Strings.s.video.stop|html}">
                        {>"ui/icon" icon="stop" class="icon--large is-primary-invert"  /}
                    </button>
                </div>
                <div class="column is-flex is-justify-content-end">
                    <input id="hero-volume" class="hero__control--volume mr-1" type="range" min="0" max="100" step="1" value="0">
                    <label class="is-sr-only" for="hero-volume">
                        {Strings.s.video.volume|html}
                    </label>
                    <button class="hero__control--mute" type="button" data-state="mute" aria-label="{Strings.s.video.mute|html}">
                        {>"ui/icon" icon="volume" class="icon--large hero__volume is-hidden is-primary-invert"  /}
                        {>"ui/icon" icon="volume-none" class="icon--large hero__volume-none is-primary-invert"  /}
                    </button>
                </div>
            </div>

            {?video_caption}
                <div id="video-caption" class="is-sr-only">
                    {video_caption|html}
                </div>
            {/video_caption}
        </div>
    {/video_file}

    <div class="hero__inner">
        <div class="container">
            <div class="columns">
                <div class="column">
                    <div class="is-center p-8 pr-8-tablet pl-8-tablet pr-2 pl-2 has-text-centered">
                        {?title}
                            <h1 class="h1 mt-0 mr-auto mb-5 ml-auto no-hyphens has-text-secondary-invert">
                                {title|html}
                            </h1>
                        {/title}

                        {?description}
                            <div class="h3 mb-6 has-text-secondary-invert keep-vertical-spacing">
                                {description|kses}
                            </div>
                        {/description}

                        {?link}
                            <div class="button-container">
                                {>"ui/button-link" classes=button_classes icon="chevron-right" icon_classes="icon--medium" /}
                            </div>
                        {/link}
                    </div>
                </div>
            </div>

            {?before_main_content}
                {before_main_content|kses}
            {/before_main_content}

            {?columns}
                <div class="columns is-centered is-multiline pr-6 pl-6 pr-9-desktop pl-9-desktop has-border-primary has-background-primary-invert has-border-1 ml-4-tablet mr-4-tablet ml-3 mr-3">
                    {#columns}
                        <div class="column is-6 is-4-desktop has-text-centered">
                            <div class="is-flex is-flex-direction-column has-height-100 p-6">
                                <p class="h3 mt-0 mb-3">
                                    {title|html}
                                </p>

                                <p class="mt-0 mb-0 has-text-large">{text|kses}</p>

                                {?logo}
                                    <div class="image-container">
                                        {@image id=logo size="thumbnail" /}
                                    </div>
                                {/logo}

                                {?link}
                                    <div class="button-container mt-auto">
                                        {>"ui/button-link" link=link classes="mt-4" icon="chevron-right" icon_classes="icon--medium" /}
                                    </div>
                                {/link}
                            </div>
                        </div>
                    {/columns}
                </div>
            {/columns}

            {?after_main_content}
                {after_main_content|kses}
            {/after_main_content}
        </div>
    </div>
</section>
