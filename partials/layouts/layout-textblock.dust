<section {?anchor}id="{anchor|attr}"{/anchor} class="section layout-textblock {txt_color_class|s}" {bg_style|s}>
    <div class="container keep-vertical-spacing">
        <div class="is-content-grid">
            <div class="textblock__inner keep-vertical-spacing{width_class|attr}">
                {?title}
                    <h2 class="mb-6 {txt_color_class|s}">
                        {title|html}
                    </h2>
                {/title}
                {text|kses}
                {?link}
                    {>"ui/button-link" classes="mt-4 {link_class|attr}" icon="chevron-right" icon_classes="icon--medium"  /}
                {/link}
            </div>
        </div>
    </div>
</section>
